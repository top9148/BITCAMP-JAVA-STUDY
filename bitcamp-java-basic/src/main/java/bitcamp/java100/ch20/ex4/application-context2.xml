<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- List 컬렉션 객체 주입하기 
        Car c1 = new Car();
        
        List<Seat> list = new ArrayList<>();
        
        Seat s1 = new Seat();
        s1.setType("가죽");
        list.add(s1);
        
        Seat s2 = new Seat();
        s2.setType("가죽");
        list.add(s2);
        
        Seat s3 = new Seat();
        s3.setType("가죽");
        list.add(s3);
        
        c1.setSeats(list);    
    -->
    <bean id="c1" class="bitcamp.java100.ch20.ex4.Car">
        <property name="seats">
          <array> <!-- List 객체를 생성할 수 있다. -->
            <bean class="bitcamp.java100.ch20.ex4.Seat" p:type="가죽"/>
            <bean class="bitcamp.java100.ch20.ex4.Seat" p:type="가죽"/>
            <bean class="bitcamp.java100.ch20.ex4.Seat" p:type="가죽"/>
          </array>
        </property>
    </bean>
    
    <bean id="c2" class="bitcamp.java100.ch20.ex4.Car">
        <property name="seats">
          <list> <!-- List 객체를 생성한다. -->
            <bean class="bitcamp.java100.ch20.ex4.Seat" p:type="가죽"/>
            <bean class="bitcamp.java100.ch20.ex4.Seat" p:type="가죽"/>
            <bean class="bitcamp.java100.ch20.ex4.Seat" p:type="가죽"/>
          </list>
        </property>
    </bean>
    
    <bean id="c3" class="bitcamp.java100.ch20.ex4.Car">
        <property name="seats">
          <set> <!-- List 객체를 생성한다. -->
            <bean class="bitcamp.java100.ch20.ex4.Seat" p:type="가죽"/>
            <bean class="bitcamp.java100.ch20.ex4.Seat" p:type="가죽"/>
            <bean class="bitcamp.java100.ch20.ex4.Seat" p:type="가죽"/>
          </set>
        </property>
    </bean>
    
</beans>















