<?xml version="1.0" encoding="UTF-8"?>
<!-- JdbcTestMapper.xml 파일
     => "jdbc_test" 테이블을 다루는 SQL문이 들어 있다.
  -->
  
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="JdbcTestMapper">

    <resultMap type="board" id="boardMap">
        <id column="no" property="no"/>
        <result column="conts" property="contents"/>
        <result column="regdt" property="createdDate"/>
        <result column="vwcnt" property="viewCount"/>
    </resultMap>

    <sql id="select1">
        select
            no, title, regdt, vwcnt
    </sql>

    <!-- select를 실행할 때 정렬 값을 입력 받기 위해 
         Map 객체를 파라미터로 받는다.  -->
    <select id="findAll" resultMap="boardMap" parameterType="map">
        <include refid="select1"/>
        from jdbc_test
        <!-- 다양한 컬럼으로 정렬을 수행하기 위해
             비슷한 select 문을 여러 개 작성하는 것은 
             매우 번거롭고 낭비적이다.
             이를 해결하기 위해 mybatis는 조건에 따라 
             SQL문을 변경하는 방법을 제공한다. -->
        
        <!-- ${변수명} 자리에 map 객체에 보관된 값이 그대로 들어간다.
             문제는 그 값을 통해 SQL문을 조작하여 보안 문제를 발생시킬 수 있다.
             이를 피하려면 가능한 ${변수명} 문법을 사용하지 말라!
             정부에서 제시하는 "시큐어 코딩 가이드"에도 사용하지 말 것을 
             권고 하고 있다. 
             실무에서는 검수 과정에서 문제 사항으로 보고될 것이다.  -->
        <if test="orderColumn != null">
            order by ${orderColumn} ${align}
        </if>
             
        
    </select>
    
    <insert id="insert" parameterType="board">
        insert into jdbc_test(title,conts,regdt)
        values(#{title},#{contents},now())
    </insert>
    
    <update id="update" parameterType="board">
        update jdbc_test set 
            title=#{title}, 
            conts=#{contents} 
        where no=#{no}
    </update>

    <delete id="delete" parameterType="int">
        delete from jdbc_test where no=#{value}
    </delete>
    
    <select id="findByNo" resultMap="boardMap" parameterType="int">
        <include refid="select1"/>
          ,conts
        from jdbc_test
        where no=#{value}
    </select>
</mapper>  









